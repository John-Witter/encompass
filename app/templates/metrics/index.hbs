<header class='metrics__header'>
  <h3>Search for a class or user below</h3>
  <p>You can also go to the info page of a workspace you'd like to get reports
    for.</p>
</header>
<div class='metrics__container'>
  <SelectizeInput
    @inputId='select-add-student'
    @maxItems={{1}}
    @initialOptions={{this.model.sections}}
    @onItemAdd={{action 'setSection'}}
    @model='user'
    @isAsync={{false}}
    @labelField='name'
    @searchField='name'
    @placeholder='Search by section name'
  />
  <h1>Currently viewing: {{this.selectedSection.name}}</h1>
  <a
    href='data:text/csv;charset=utf-8,{{this.folderCsv}}'
    download='{{this.selectedSection.name}}_report.csv'
  >Download CSV</a>
  {{#each this.allFolders as |folder|}}
    <p>{{folder.name}}</p>
  {{/each}}
</div>