<p>{{#link-to "metrics.workspace" workspaceId}}back to workspace{{/link-to}}</p>
<div class="metrics__container">
  <h1>Submissions</h1>
  <button {{action "handleToggle" "showSelections"}}>Report Selections</button>
  <button {{action "handleToggle" "showFolders"}}>Report Folders</button>
  <button {{action "handleToggle" "showComments"}}>Report Comments</button>
  <button {{action "handleToggle" "showResponses"}}>Report Responses</button>
  <p>{{model.student}}</p>
  {{#if showSelections}}
    <p>selections</p>
    <table class="metrics__table">
      <thead>
        <tr>
          <th>
            selected text
          </th>
        </tr>
      </thead>
      <tbody>
        {{#each model.selections as |selection|}}
          <tr>
            <td>{{selection.text}}</td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  {{/if}}
  {{#if showFolders}}
    <table class="metrics__table">
      <thead>
        <tr>
          <th>
            Label
          </th>
        </tr>
      </thead>
      <tbody>
        {{#each model.folders as |folder|}}
          <tr>
            <td>{{folder.name}}</td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  {{/if}}
  {{#if showComments}}
    <table class="metrics__table">
      <thead>
        <tr>
          <th>
            Created By
          </th>
          <th>
            Label
          </th>
          <th>
            Text
          </th>
        </tr>
      </thead>
      <tbody>
        {{#each model.comments as |comment|}}
          <tr>
            <td>{{comment.createdBy.username}}</td>
            <td>{{comment.label}}</td>
            <td>{{comment.text}}</td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  {{/if}}
  {{#if showResponses}}
    <table class="metrics__table">
      <thead>
        <tr>
          <th>
            Created By
          </th>
          <th>
            Text
          </th>
        </tr>
      </thead>
      <tbody>
        {{#each model.responses as |response|}}
          <tr>
            <td>{{response.createdBy.username}}</td>
            <td>{{html-to-text response.text}}</td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  {{/if}}
  <div id="submission">
    <h3>answer</h3>
    <p>{{if model.shortAnswer model.shortAnswer model.answer.answer}}</p>
    <h3>explanation</h3>
    <p>{{if model.longAnswer (html-to-text model.longAnswer) (html-to-text model.answer.explanation)}}</p>
  </div>
</div>
<p>{{#link-to "metrics.workspace" workspaceId}}back to workspace{{/link-to}}</p>