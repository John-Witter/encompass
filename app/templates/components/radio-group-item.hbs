<div class="radio-group-item">
  <label class={{if @noWidth "no-width"}}>
    <input type="radio" checked={{this.isSelected}} required={{@isRequired}} name={{@name}} value={{@value}} onclick={{action "onClick" @value}}>
    <span>
      {{@label}}
      {{#if @moreInfo}}
        <span class="simptip-position-right simptip-smooth" data-tooltip="{{@moreInfo}}">
          <i class="far fa-question-circle info-icon"></i>
        </span>
      {{/if}}
    </span>
  </label>
 </div>

