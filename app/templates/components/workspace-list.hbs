<div class="main-list">
  {{#if isSearching}}
    <p class="loading-message">Searching workspaces...</p>
  {{else}}
    {{#each workspaces as |workspace|}}
      {{workspace-list-item
      sections=sections
      workspace=workspace
      isList=isList
      isGrid=isGrid
      store=store
      toWorkspaceInfo=(action "toWorkspaceInfo")
      toCopyWorkspace=(action "toCopyWorkspace")
    }}
    {{/each}}
  {{/if}}
</div>
