<header class="info-header">
    {{#if this.isEditing}}
      <span class="top-left-icon">
        {{{public-private this.privacySettingIcon}}}
      </span>
      <div class="select-container">
        <select name="privacy-settings" id="privacy-select" {{action 'changePrivacy' on='change'}}>
          <option value="E" selected={{is-equal this.problem.privacySetting "E"}}>Everyone</option>
          <option value="O" selected={{is-equal this.problem.privacySetting "O"}}>My Org</option>
          <option value="M" selected={{is-equal this.problem.privacySetting "M"}}>Just Me</option>
        </select>
      </div>
    {{else}}
      <span class="top-left-icon simptip-position-right simptip-smooth" data-tooltip={{privacy-setting this.problem.privacySetting}}>
        {{{public-private this.problem.privacySetting}}}
      </span>
    {{/if}}
  <span class="remove-icon" {{action 'hideInfo'}}>
    <i class="fas fa-times"></i>
  </span>
</header>

<div class="side-info-menu">
  <section class="info-details">
    <div class="info-main">
      <div class="heading">
        {{#if this.isEditing}}
          <Input @name="title" @id="title" @type="text" @value={{this.problemName}} />
        {{else}}
          {{{this.problem.title}}}
        {{/if}}
      </div>
      <div class="subheading date">{{format-date this.problem.createDate 'MM/DD/YYYY'}}</div>
      <div class="subheading">{{#link-to "metrics.problem" this.problem}}See Reports{{/link-to}}</div>
    </div>
    <div class="info-menu">
      <button class="tab-link general {{if this.showGeneral 'active-btn'}}" {{action 'showGeneral'}}>General</button>
      <button class="tab-link categories {{if this.showCats 'active-btn'}}" {{action 'showCats'}}>Categories</button>
      <button class="tab-link additional {{if this.showAdditional 'active-btn'}}" {{action 'showAdditional'}}>Additional</button>
      <button class="tab-link legal {{if this.showLegal 'active-btn'}}" {{action 'showLegal'}}>Legal</button>
    </div>
    <div class="info-content">
      {{#if this.showGeneral}}
        <p class="info-content-label">Problem Statement</p>
        <div class="info-content-block statement large-content">
          {{#if this.isEditing}}
            <QuillContainer @onEditorChange={{action "updateQuillText"}} @startingText={{this.problem.text}} />
          {{else}}
            {{{this.problem.text}}}
          {{/if}}
        </div>
        {{#if this.isEditing}}
          <p class="info-content-label">Author</p>
          <div class="info-content-block author">
            {{#if this.problem.author}}
              <div class="input-container">
                <Input @name="author" @id="author" @type="text" @value={{this.author}} />
              </div>
            {{else}}
              <div class="input-container">
                <Input @name="author" @id="author" @type="text" placeholder="Add author" @value={{this.author}} />
              </div>
            {{/if}}
          </div>
        {{else}}
          {{#if this.problem.author}}
            <p class="info-content-label">Author</p>
            <div class="info-content-block author">
              {{this.problem.author}}
            </div>
          {{/if}}
        {{/if}}
        {{#if this.problem.organization}}
          {{#if this.currentUser.isAdmin}}
          <p class="info-content-label">Organization</p>
          <div class="info-content-block org">
            {{#if this.problem.organization}}
              {{this.problem.organization.name}}
            {{/if}}
          </div>
          {{/if}}
        {{/if}}
        <p class="info-content-label">Problem Status</p>
        <div class="info-content-block">
          {{#if this.isEditing}}
            {{#if this.currentUser.isTeacher}}
              <svg height="20" width="20">
                <circle cx="10" cy="15" r="5" fill={{this.statusIconFill}} />
              </svg>
              <span class="status-text">
                {{this.problem.status}}
              </span>
            {{else}}
              <svg height="20" width="20">
                <circle cx="10" cy="15" r="5" fill={{this.statusIconFill}} />
              </svg>
              <MySelect @cannotBeNull={{true}} @selectedValue={{this.problem.status}} @content={{this.problemStatusOptions}} @action={{action (mut this.problemStatus)}} @isDisabled={{this.isReadOnly}} />
            {{/if}}
          {{else}}
            <svg height="20" width="20">
              <circle cx="10" cy="15" r="5" fill={{this.statusIconFill}} />
            </svg>
            <span class="status-text">
              {{this.problem.status}}
            </span>
            {{#if (is-equal this.problem.status 'flagged')}}
              {{#if this.showFlagReason}}
                <span class="show-reason" {{action 'toggleShowFlagReason'}}>Hide</span>
                <div class="flag-reason">
                  <p class="reason"><strong>Reason:</strong> {{this.problem.flagReason.reason}}</p>
                  <p class="details">By <LinkTo @route="users.user" @model={{this.flaggedBy.id}}>{{this.flaggedBy.username}}</LinkTo> on {{format-date
                    this.problem.flagReason.flaggedDate 'MMM Do YYYY'}}</p>
                </div>
              {{else}}
                <span class="show-reason" {{action 'toggleShowFlagReason'}}>Why?</span>
              {{/if}}
            {{/if}}
          {{/if}}
        </div>
      {{/if}}

      {{#if this.showCats}}
        <p class="info-content-label">Problem Categories</p>
        <div class="info-content-block categories">
          {{#if this.isEditing}}
            {{#if this.problem.categories}}
              <ul>
                {{#each this.problem.categories as |category|}}
                  <li class="category-item">
                    <a href="{{category.url}}" target="_blank">{{category.identifier}}</a>
                    <button class="remove-cat" {{action 'removeCategory' category}}><i class="far fa-times-circle"></i></button>
                    <p class="category-description">{{category.description}}</p>
                  </li>
                {{/each}}
              </ul>
              {{#unless this.showCategories}}
              <div class="button-row-list">
                <button class="cancel-button" {{action 'showCategories'}}>Add Categories</button>
              </div>
              {{/unless}}
              {{#if this.showCategories}}
                <div class="button-row-list">
                  <button class="cancel-button" {{action 'showCategories'}}>Hide Categories</button>
                </div>
                <CategoriesMenu @categories={{this.categoryTree}} @store={{this.store}} @addCategories="addCategories" />
              {{/if}}
            {{else}}
              {{#unless this.showCategories}}
                <div class="button-row">
                  <button class="cancel-button" {{action 'showCategories'}}>Add Categories</button>
                </div>
              {{/unless}}
              {{#if this.showCategories}}
                <div class="button-row">
                  <button class="cancel-button" {{action 'showCategories'}}>Hide Categories</button>
                </div>
                {{#if this.categoryTree}}
                  <CategoriesMenu @categories={{this.categoryTree}} @store={{this.store}} @addCategories="addCategories" />
                {{/if}}
              {{/if}}
            {{/if}}
          {{else}}
            {{#if this.problem.categories}}
              <ul>
                {{#each this.problem.categories as |category|}}
                <li class="category-item">
                  <a href="{{category.url}}" target="_blank">{{category.identifier}}</a>
                  <p class="category-description">{{category.description}}</p>
                </li>
                {{/each}}
              </ul>
            {{else}}
              No Problem Categories
            {{/if}}
          {{/if}}
        </div>
        <p class="info-content-label">Problem Keywords</p>
        <div class="info-content-block keywords">
          {{#if this.isEditing}}
            <SelectizeInput @inputId="select-edit-keywords" @onItemAdd={{action "updateKeywords"}} @onItemRemove={{action "updateKeywords"}} @maxItems={{5}} @create={{true}} @createFilter={{this.keywordFilter}} @persist={{false}} @initialItems={{this.problem.keywords}} @initialOptions={{this.keywordSelectOptions}} @labelField="label" @valueField="value" />
            {{else}}
              {{#if this.problem.keywords}}
                <ul>
                  {{#each problem.keywords as |keyword|}}
                  <li>
                    {{keyword}}
                  </li>
                  {{/each}}
                </ul>
              {{else}}
                No Problem Keywords
              {{/if}}
          {{/if}}

        </div>
      {{/if}}

      {{#if this.showAdditional}}
        <p class="info-content-label">Additional Info</p>
          {{#if this.isEditing}}
          <div class="info-content-block additional">
            <div class="input-container">
              <Textarea class="additional-info-area" @value={{this.additionalInfo}} @rows="4" placeholder="Additional info..." />
              <Input @id="additionalInfo" @type="hidden" @value={{this.additionalInfo}} />
            </div>
          </div>
          {{else}}
          <div class="info-content-block large-content additional">
            {{#if this.problem.additionalInfo}}
              {{{this.problem.additionalInfo}}}
            {{else}}
              No Additional Info
            {{/if}}
          </div>
          {{/if}}
        <p class="info-content-label">Additional Image</p>
        <div class="info-content-block image">
          {{#if this.problem.image}}
            <a {{action 'toggleImageSize'}}>
              <img src="{{this.problem.image.imageData}}" alt="Image Error" class="additional-image {{if isWide "wide"}}">
            </a>
          {{else}}
            {{#unless this.isEditing}}
              No Additional Image
            {{/unless}}
          {{/if}}
          {{#if this.isEditing}}
            {{#if this.problem.image}}
              <button class="edit-image-btn" {{action 'deleteImage'}}>Delete</button>
            {{else}}
              <div class="input-container" id="image-upload">
                <ImageUpload @filesToBeUploaded={{this.filesToBeUploaded}} @hideSubmit={{true}} />
              </div>
            {{/if}}
          {{/if}}
        </div>
        {{#if this.problem.origin}}
          <p class="info-content-label">Problem Origin</p>
          <div class="info-content-block origin">
            <p><LinkTo @route="problems.problem" @model={{this.problem.origin.id}}>{{this.problem.origin.title}}</LinkTo></p>
          </div>
        {{/if}}
        {{#if this.currentUser.isAdmin}}
        <p class="info-content-label">Created By</p>
        <div class="info-content-block creator">
          <p><LinkTo @route="users.user" @model={{this.problem.createdBy.id}}>{{this.problem.createdBy.username}}</LinkTo></p>
        </div>
        {{/if}}
      {{/if}}

      {{#if this.showLegal}}
        <p class="info-content-label">Copyright Notice</p>
        <div class="info-content-block copyright">
          {{#if this.isEditing}}
            <div class="input-container" id="copyright-container">
              <span id="icon">&copy;</span>
              <Input @name="copyright" @id="copyright" @type="text" @value={{this.copyrightNotice}} placeholder="Add Copyright Notice" />
            </div>
          {{else}}
            {{#if this.problem.copyrightNotice}}
              <p>&copy; {{this.problem.copyrightNotice}}</p>
            {{else}}
              No Copyright Notice
            {{/if}}
          {{/if}}
        </div>
        <p class="info-content-label">Sharing Authorization</p>
        <div class="info-content-block sharing">
          {{#if this.isEditing}}
            <div class="input-container">
              <Input @name="sharing" @id="sharing" @type="text" @value={{this.sharingAuth}} placeholder="Add Sharing Authorization" />
            </div>
          {{else}}
            {{#if this.problem.sharingAuth}}
              {{this.problem.sharingAuth}}
            {{else}}
              No Sharing Authorization
            {{/if}}
          {{/if}}
        </div>
      {{/if}}
    </div>
  </section>

  <section class="info-actions">
    <div class="buttons-container">
      <span class="left-buttons">
        {{#if this.isEditing}}
          {{#unless this.problem.isTrashed}}
          <button class="button-icon" {{action 'deleteProblem'}}><i class="fas fa-trash"></i></button>
          {{/unless}}
        {{else}}
          <span class="info-text-tip simptip-position-right simptip-smooth" data-tooltip="Make a Copy of this Problem">
            <button class="button-icon" {{action 'addToMyProblems'}}><i class="far fa-copy"></i></button>
          </span>
          {{#unless this.currentUser.isTeacher}}
            {{#unless this.problem.isTrashed}}
            {{#unless (is-equal this.problem.status 'flagged')}}
              {{#if this.isRecommended}}
                <span class="info-text-tip simptip-position-right simptip-smooth" data-tooltip="Remove this Problem from Recommended">
                  <button class="button-icon star-icon" {{action 'removeRecommend'}}>
                    <i class="fas fa-star star-filled"></i>
                  </button>
                </span>
              {{else}}
                <span class="info-text-tip simptip-position-right simptip-smooth" data-tooltip="Add this Problem to Recommended">
                  <button class="button-icon star-icon" {{action 'checkRecommend'}}>
                    <i class="far fa-star star-line"></i>
                  </button>
                </span>
              {{/if}}
            {{/unless}}
            {{/unless}}
          {{/unless}}
          {{#if this.currentUser.isTeacher}}
            {{#if this.isRecommended}}
              <button class="button-icon star-icon no-cursor">
                <i class="fas fa-star star-filled"></i>
              </button>
            {{/if}}
          {{/if}}
        {{/if}}
      </span>
      <span class="right-buttons">
        {{#if this.isEditing}}
          <button class="action_button cancel-button" {{action 'cancelEdit'}}>Cancel</button>
          <button class="primary-button save" {{action 'checkPrivacy'}}>Save</button>
        {{else}}
          {{#if this.canEdit}}
            {{#if this.problem.isUsed}}
              {{#if this.currentUser.isAdmin}}
                <button class="primary-button edit" {{action 'editProblem'}}>Edit</button>
              {{/if}}
            {{else}}
              <button class="primary-button edit" {{action 'editProblem'}}>Edit</button>
            {{/if}}
          {{/if}}
            {{#unless this.problem.isTrashed}}
              {{#unless (is-equal this.problem.status 'flagged')}}
              <button class="primary-button assign" {{action 'showAssignment'}}>Assign</button>
              {{/unless}}
            {{/unless}}
        {{/if}}
        {{#if this.problem.isTrashed}}
          {{#if this.currentUser.isAdmin}}
            {{#unless this.isEditing}}
              <button class="primary-button restore" {{action 'restoreProblem'}}>Restore</button>
            {{/unless}}
          {{/if}}
        {{/if}}
      </span>
    </div>
  </section>
  {{#if this.isMissingRequiredFields}}
    <ErrorBox @error="Please fill in all required fields" @showDismiss={{true}} />
  {{/if}}

  {{#each this.updateProblemErrors as |error|}}
    <ErrorBox @error={{error}} @showDismiss={{true}} @resetError={{action (mut this.updateProblemErrors) null}} />
  {{/each}}
  {{#each this.imageUploadErrors as |error|}}
    <ErrorBox @error={{error}} @showDismiss={{true}} @resetError={{action (mut this.imageUploadErrors) null}} />
  {{/each}}
  {{#each this.createRecordErrors as |error|}}
    <ErrorBox @error={{error}} @showDismiss={{true}} @resetError={{action (mut this.createRecordErrors) null}} />
  {{/each}}
  {{#each this.findRecordErrors as |error|}}
    <ErrorBox @error={{error}} @showDismiss={{true}} @resetError={{action (mut this.findRecordErrors) null}} />
  {{/each}}

  {{#if this.showAssignment}}
    <AssignmentNew @cancel={{action (mut this.showAssignment) null}} @fromProblemInfo={{true}} @problems={{this.problemList}} @selectedProblem={{this.problem}} @sections={{this.sectionList}} @store={{this.store}} @toAssignmentInfo="toAssignmentInfo" />
  {{/if}}
</div>
